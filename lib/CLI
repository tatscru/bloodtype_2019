class Bloodtype::CLI

  def call 
    lists_blood_types
    foods 
    sample_menu 
  end 


  def lists_blood_types

    puts "The 4 different blood types"

    1. Type O
    2. Type A
    3. Type B
    4. Type AB

    
  end 
  
  def foods 
    puts "To learn more, enter the number associated with your blood type, enter list to see the list of bloodtypes again, or type exit" 
  
    input = gets.strip 
    case = input 
    when "1"
      puts "More info on Type O"
    when "2"
      puts "More info on Type A"
    when "3" 
      puts "More info on Type B"
    when "4" 
      puts "More info on Type AB"
    else 
      puts "Sorry, I did not understand your input"
  end 
end 
  

  def goodbye
    puts "Have a wonderful day!"
  end 

end 